{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "header-max-length": [0, "always", 94],
    "subject-empty": [2, "never"],
    "type-enum": [
      2,
      "always",
      [
        "build",
        "chore",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test"
      ]
    ],
    "type-empty": [2, "never"],
    "type-case": [2, "always", "lowerCase"],
    "scope-empty": [0, "never"],
    "scope-case": [2, "always", "lowerCase"],
    "scope-enum": [2, "always", []]
  }
}
